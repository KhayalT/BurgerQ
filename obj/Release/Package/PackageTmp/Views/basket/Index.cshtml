@model IEnumerable<BurgerQ.Models.Entity.basket>

@{
    ViewBag.Title = "Index";
    Layout = null;
}


<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<div class="container">
    <div class="row">
        <div class="col-xs-8">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Səbət</h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary btn-sm btn-block" onclick="location.href='@Url.Action("Index","Menu")'">
                                    <span class="glyphicon glyphicon-share-alt"></span>Alışverişə davam et
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        @foreach (var item in Model)
                        {<table class="table table-bordered">
                        
                             <tr style="background-color:lightblue">
                                 <th>Məhsul</th>
                                 <th>Ədəd</th>
                                 <th>Qiymət</th>
                                 <th></th>
                             </tr>
                             <tr>
                                 <td>@Html.DisplayFor(modelItem => item.product.Name)</td>
                                 <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                 <td></td>
                                 <td>@Html.ActionLink("Sil", "Delete", new { id = item.ID}, new { @class="btn btn-danger" })</td>

                             </tr>
                        
                        </table>
                        
                        
                        
                       
                            
                        }
                    </div>

                    <hr>

                    <hr>
                    <div class="row">
                        <div class="text-center">
                            <div class="col-xs-9">
                              
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn btn-default btn-sm btn-block">
                                    Update cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-9">
                            <h4 class="text-right">Cəm <strong>@ViewBag.total ₼</strong></h4>
                        </div>
                        <div class="col-xs-3">
                            <button type="button" onclick="location.href='@Url.Action("AdressList","Order")'" class="btn btn-success btn-block">
                                Sifariş Ver
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


